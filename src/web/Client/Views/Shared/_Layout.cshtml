@{
    string currentUrl = HttpContext.Current.Request.Url.AbsoluteUri;
    string rf = HttpContext.Current.Request.QueryString["rf"];
    if (string.IsNullOrEmpty(rf))
    {
        rf = Yojowa.StopByStop.Utils.CookieUtils.ReadCookie("rf");
    }
    if (string.IsNullOrEmpty(rf))
    {
        rf = "";
    }
}

